doctype html
html
  head
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    link(rel='stylesheet', type='text/css', href='css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='css/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='css/sticky-footer.css')
    link(rel='stylesheet', type='text/css', href='css/style.css')
    script(src='js/jquery-2.1.1.min.js')
    script(src='js/bootstrap.min.js')
    script(src='js/promise.js')
    script(src='js/underscore.min.js')
    script(src='js/underscore.string.min.js')
    script(src='js/api.js')
    title WeaponSmith
  body
    section.page
      .container
        header.page-header
            h1 WeaponSmith
        section#content
            p#message.well= message
            button#get-new-weapon.btn.btn-primary.btn-lg(data-loading-text="Forging New Weapon...") Forge a New Weapon!
    footer.sticky-footer
      .container
        p.text-muted Created by akisute.
    script.
      $(function() {
        $("#get-new-weapon").click(function() {
          var $button = $(this);
          $button.button("loading");
          getNewWeaponAsync()
          .then(function (weapon) {
            $("#message").text(_.str.sprintf("You got a new weapon: %s", weapon.nameEn));
            $button.button("reset");
          })
          .catch(function (error) {
            $("#message").text(_.str.sprintf("Error! %s", error.message));
            $button.button("reset");
          });
        });
      });
      